@page
@model RazorLesson.Pages.Users.IndexModel
@{
    ViewData["Title"] = "User list";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Users</h2>
        </div>
        <div class="col-6">
            <a asp-page="create" class="btn btn-primary">Create user</a>
        </div>
        <br/>
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>User name</th>
                <th>User email</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-page="edit" class="btn btn-primary mx-2">Edit</a>
                                    <a asp-page="delete" asp-route-id="@user.Id" class="btn btn-primary mx-2">Delete</a>
                                }
                                else
                                {
                                    <a style="pointer-events: none; display: inline-block;" href="#" class="btn btn-dark mx-2">Edit</a>
                                    <a style="pointer-events: none; display: inline-block;" href="#" class="btn btn-dark mx-2">Delete</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @Html.AuthorName("Test user")
</div>
