@page
@model RazorLesson.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding: 20px">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2>Login</h2>
            </div>
            <div class="mb-3">
                <label asp-for="User.Email"></label>
                <input asp-for="User.Email" class="form-control" type="text"/>
            </div>
            <div class="mb-3">
                <label asp-for="User.Password"></label>
                <input asp-for="User.Password" class="form-control" type="password"/>
            </div>
            <div class="row form-check mb-2">
                <div class="col-2">
                    <input asp-for="@Model.RememberMe" class="form-check-input" type="checkbox"/>
                    <label asp-for="@Model.RememberMe" class="form-check-label"></label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 150px">Login</button>
        </div>
    </form>
</div>